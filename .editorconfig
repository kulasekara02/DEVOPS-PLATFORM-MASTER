# =============================================================================
# EditorConfig - Consistent coding styles across editors and IDEs
# https://editorconfig.org
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Default settings for all files
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# -----------------------------------------------------------------------------
# JavaScript, TypeScript, JSON, YAML
# -----------------------------------------------------------------------------
[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_size = 2

# -----------------------------------------------------------------------------
# Python
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 88

# -----------------------------------------------------------------------------
# Go
# -----------------------------------------------------------------------------
[*.go]
indent_style = tab
indent_size = 4

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 2
shell_variant = bash

# -----------------------------------------------------------------------------
# Makefiles (must use tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# -----------------------------------------------------------------------------
# Markdown
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# -----------------------------------------------------------------------------
# Docker
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

# -----------------------------------------------------------------------------
# Terraform
# -----------------------------------------------------------------------------
[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2

# -----------------------------------------------------------------------------
# Kubernetes manifests
# -----------------------------------------------------------------------------
[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2
